#include "main.h"
/**
* print_diagonal - Function that draws a diagonal line on the terminal
*
* @n: The number of times the character \ should be printed
*
* Return: 0
*/
void print_diagonal(int n)
{
int i;
int j;
if (n <= 0){
putchar('\n');
}
else{
for (i = 0; i < n; i++)
{
for (j = 0; j < i; j++)
{
putchar(32);
}
putchar(92);
putchar ('\n');
}
}
}

